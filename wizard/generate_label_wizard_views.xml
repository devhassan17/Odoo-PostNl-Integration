<odoo>
    <record id="view_generate_postnl_label_wizard" model="ir.ui.view">
        <field name="name">postnl.generate.label.wizard</field>
        <field name="model">postnl.generate.label.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate PostNL Label" create="false" edit="false">
                <group>
                    <field name="picking_id" readonly="1"/>
                    <field name="label_description"/>
                    <field name="package_type"/>
                    <field name="only_recipient"/>
                    <field name="signature"/>
                    <field name="insured"/>
                    <field name="insured_amount"/>
                    <field name="multi_collo"/>
                </group>
                <footer>
                    <button string="Generate" type="object" name="action_generate" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
