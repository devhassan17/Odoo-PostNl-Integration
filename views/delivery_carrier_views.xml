            <xpath expr="//field[@name='delivery_type']" position="after">
                <group attrs="{'invisible': [('delivery_type','!=','postnl')]}">
                    <field name="postnl_wbs_rule_id"/>
                    <label string="PostNL carrier uses global settings under General Settings â†’ PostNL."/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
