<odoo>
    <record id="view_delivery_carrier_form_postnl" model="ir.ui.view">
        <field name="name">delivery.carrier.form.postnl</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='delivery_type']" position="after">
                <!-- Odoo 18+: replace attrs with boolean invisible -->
                <group invisible="record.delivery_type != 'postnl'">
                    <field name="postnl_wbs_rule_id"/>
                    <label string="PostNL carrier uses global settings under PostNL â†’ Settings."/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
