<!-- postnl_odoo_integration/views/stock_picking_views.xml -->
<odoo>
    <record id="view_picking_form_inherit_postnl" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.postnl</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="inside">
                <page string="PostNL">
                    <group>
                        <field name="postnl_shipment_imported" readonly="1"/>
                        <field name="postnl_last_shipment_update" readonly="1"/>
                        <field name="carrier_tracking_ref"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
