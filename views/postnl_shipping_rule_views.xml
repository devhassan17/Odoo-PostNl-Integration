<odoo>
  <data>
    <record id="view_postnl_rule_list" model="ir.ui.view">
      <field name="name">postnl.shipping.rule.list</field>
      <field name="model">postnl.shipping.rule</field>
      <field name="arch" type="xml">
        <list>
          <field name="active"/>
          <field name="sequence"/>
          <field name="name"/>
          <field name="shipping_code"/>
          <field name="max_weight"/>
        </list>
      </field>
    </record>

    <record id="view_postnl_rule_form" model="ir.ui.view">
      <field name="name">postnl.shipping.rule.form</field>
      <field name="model">postnl.shipping.rule</field>
      <field name="arch" type="xml">
        <form string="Shipping Rule">
          <sheet>
            <group>
              <group>
                <field name="active"/>
                <field name="sequence"/>
                <field name="name"/>
                <field name="shipping_code"/>
                <field name="max_weight"/>
              </group>
              <group>
                <field name="country_ids" widget="many2many_tags"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="view_postnl_rule_search" model="ir.ui.view">
      <field name="name">postnl.shipping.rule.search</field>
      <field name="model">postnl.shipping.rule</field>
      <field name="arch" type="xml">
        <search>
          <field name="name"/>
          <field name="shipping_code"/>
          <filter string="Active" name="active" domain="[('active','=',True)]"/>
          <group expand="0" string="Group By">
            <filter string="Shipping Code" name="grp_code" context="{'group_by':'shipping_code'}"/>
          </group>
        </search>
      </field>
    </record>
  </data>
</odoo>