<!-- postnl_odoo_integration/views/postnl_shipping_rule_views.xml -->
<odoo>
    <record id="view_postnl_shipping_rule_tree" model="ir.ui.view">
        <field name="name">postnl.shipping.rule.tree</field>
        <field name="model">postnl.shipping.rule</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence"/>
                <field name="name"/>
                <field name="shipping_code"/>
                <field name="weight_min"/>
                <field name="weight_max"/>
                <field name="no_max_weight"/>
                <field name="country_ids"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_postnl_shipping_rule_form" model="ir.ui.view">
        <field name="name">postnl.shipping.rule.form</field>
        <field name="model">postnl.shipping.rule</field>
        <field name="arch" type="xml">
            <form string="PostNL Shipping Rule">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="sequence"/>
                        <field name="active"/>
                    </group>
                    <group>
                        <field name="shipping_code"/>
                    </group>
                    <group string="Weight">
                        <field name="weight_min"/>
                        <field name="weight_max" attrs="{'invisible': [('no_max_weight','=',True)]}"/>
                        <field name="no_max_weight"/>
                    </group>
                    <group string="Countries">
                        <field name="country_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_postnl_shipping_rule" model="ir.actions.act_window">
        <field name="name">PostNL Shipping Rules</field>
        <field name="res_model">postnl.shipping.rule</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_postnl_root"
              name="PostNL"
              parent="base.menu_config"
              sequence="90"/>

    <menuitem id="menu_postnl_shipping_rules"
              name="Shipping Rules"
              parent="menu_postnl_root"
              action="action_postnl_shipping_rule"
              sequence="10"/>
</odoo>
