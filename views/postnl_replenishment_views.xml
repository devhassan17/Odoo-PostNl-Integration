<odoo>
    <record id="view_postnl_replenishment_tree" model="ir.ui.view">
        <field name="name">postnl.replenishment.tree</field>
        <field name="model">postnl.replenishment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="picking_id"/>
                <field name="state"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <record id="view_postnl_replenishment_form" model="ir.ui.view">
        <field name="name">postnl.replenishment.form</field>
        <field name="model">postnl.replenishment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_send_to_postnl"
                            type="object"
                            string="Send to PostNL"
                            states="draft,error"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="picking_id"/>
                        <field name="merchant_code"/>
                        <field name="fulfilment_location"/>
                    </group>
                    <group>
                        <field name="request_payload" readonly="1"/>
                        <field name="response_message" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_postnl_replenishment" model="ir.actions.act_window">
        <field name="name">PostNL Replenishments</field>
        <field name="res_model">postnl.replenishment</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_postnl_root" name="PostNL"/>
    <menuitem id="menu_postnl_replenishment"
              name="Replenishments"
              parent="menu_postnl_root"
              action="action_postnl_replenishment"/>
</odoo>
