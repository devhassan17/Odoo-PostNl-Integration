<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- LIST VIEW -->
    <record id="view_postnl_replenishment_list" model="ir.ui.view">
        <field name="name">postnl.replenishment.list</field>
        <field name="model">postnl.replenishment</field>
        <field name="arch" type="xml">
            <list string="PostNL Replenishments" default_order="create_date desc">
                <field name="name"/>
                <field name="picking_id"/>
                <field name="state"/>
                <field name="create_date"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_postnl_replenishment_form" model="ir.ui.view">
        <field name="name">postnl.replenishment.form</field>
        <field name="model">postnl.replenishment</field>
        <field name="arch" type="xml">
            <form string="PostNL Replenishment" create="0" delete="0">
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="picking_id" readonly="1"/>
                            <field name="state" readonly="1"/>
                        </group>
                        <group>
                            <field name="merchant_code" readonly="1"/>
                            <field name="fulfilment_location" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Request">
                            <field name="request_payload" readonly="1" widget="text"/>
                        </page>
                        <page string="Response">
                            <field name="response_message" readonly="1" widget="text"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- SEARCH VIEW (FIXED) -->
    <record id="view_postnl_replenishment_search" model="ir.ui.view">
        <field name="name">postnl.replenishment.search</field>
        <field name="model">postnl.replenishment</field>
        <field name="arch" type="xml">
            <search string="Search Replenishments">
                <field name="name"/>
                <field name="picking_id"/>
                <field name="state"/>

                <filter name="sent"
                        string="Sent"
                        domain="[('state','=','sent')]"/>

                <filter name="failed"
                        string="Failed"
                        domain="[('state','=','error')]"/>

                <group expand="0" string="Group By">
                    <filter name="grp_state"
                            string="State"
                            context="{'group_by':'state'}"/>
                    <filter name="grp_picking"
                            string="Picking"
                            context="{'group_by':'picking_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_postnl_replenishment" model="ir.actions.act_window">
        <field name="name">PostNL Replenishments</field>
        <field name="res_model">postnl.replenishment</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_postnl_replenishment_search"/>
        <field name="views"
               eval="[
                   (ref('view_postnl_replenishment_list'), 'list'),
                   (ref('view_postnl_replenishment_form'), 'form')
               ]"/>
    </record>

    <!-- MENU -->
    <menuitem id="menu_postnl_root" name="PostNL"/>
    <menuitem id="menu_postnl_replenishment"
              name="Replenishments"
              parent="menu_postnl_root"
              action="action_postnl_replenishment"/>

</odoo>
