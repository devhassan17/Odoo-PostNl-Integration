<odoo>
    <!-- Standalone PostNL settings form (no inherit_id) -->
    <record id="view_res_config_settings_postnl_form" model="ir.ui.view">
        <field name="name">res.config.settings.postnl.form</field>
        <field name="model">res.config.settings</field>
        <field name="arch" type="xml">
            <form string="PostNL Settings">
                <sheet>
                    <group string="Mode">
                        <field name="postnl_test_mode"/>
                    </group>

                    <group string="API Credentials">
                        <field name="postnl_api_key" password="True"/>
                        <field name="postnl_customer_code"/>
                        <field name="postnl_customer_number"/>
                    </group>

                    <group string="Sender Address">
                        <field name="postnl_sender_name"/>
                        <field name="postnl_sender_street"/>
                        <field name="postnl_sender_house_no"/>
                        <field name="postnl_sender_postcode"/>
                        <field name="postnl_sender_city"/>
                        <field name="postnl_sender_country_code"/>
                    </group>

                    <group string="Default Shipment Options">
                        <field name="postnl_default_package_type"/>
                        <field name="postnl_default_signature"/>
                        <field name="postnl_default_only_recipient"/>
                        <field name="postnl_default_insured"/>
                        <field name="postnl_default_insured_amount"/>
                    </group>

                    <group string="Checkout Options">
                        <field name="postnl_evening_delivery"/>
                        <field name="postnl_morning_delivery"/>
                        <field name="postnl_saturday_delivery"/>
                        <field name="postnl_cutoff_hour"/>
                        <!-- INFO helper using label style without a 'for' -->
                        <label class="o_form_label">Checkout delivery options &amp; cut-off.</label>
                    </group>
                </sheet>
                <footer>
                    <!-- res.config.settings uses 'execute' to persist config_parameter values -->
                    <button string="Save" type="object" name="execute" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Window action to open the standalone settings wizard -->
    <record id="action_postnl_settings" model="ir.actions.act_window">
        <field name="name">PostNL Settings</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_res_config_settings_postnl_form"/>
        <field name="target">new</field>
        <field name="context">{}</field>
    </record>

    <!-- Menu entry under your existing PostNL root menu -->
    <menuitem id="menu_postnl_settings"
              name="Settings"
              parent="menu_postnl_root"
              action="action_postnl_settings"
              sequence="5"/>
</odoo>
