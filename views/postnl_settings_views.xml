<odoo>
    <record id="res_config_settings_view_form_postnl" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.postnl</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.view_res_config_settings"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='settings']" position="inside">
                <div class="app_settings_block" data-string="PostNL" string="PostNL" name="postnl_settings">
                    <h2>PostNL</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6">
                            <div class="o_setting_box">
                                <div class="o_setting_left">
                                    <field name="postnl_test_mode"/>
                                </div>
                                <div class="o_setting_right">
                                    <label for="postnl_test_mode"/>
                                    <div class="text-muted">Use PostNL sandbox while testing.</div>
                                </div>
                            </div>
                            <div class="o_setting_box">
                                <div class="o_setting_left">
                                    <field name="postnl_api_key" password="True"/>
                                    <field name="postnl_customer_code"/>
                                    <field name="postnl_customer_number"/>
                                </div>
                                <div class="o_setting_right">
                                    <label for="postnl_api_key"/>
                                    <div class="text-muted">API credentials (Labelling/Shipping APIs).</div>
                                </div>
                            </div>
                            <div class="o_setting_box">
                                <div class="o_setting_left">
                                    <field name="postnl_sender_name"/>
                                    <field name="postnl_sender_street"/>
                                    <field name="postnl_sender_house_no"/>
                                    <field name="postnl_sender_postcode"/>
                                    <field name="postnl_sender_city"/>
                                    <field name="postnl_sender_country_code"/>
                                </div>
                                <div class="o_setting_right">
                                    <label for="postnl_sender_name"/>
                                    <div class="text-muted">Default sender address.</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6">
                            <div class="o_setting_box">
                                <div class="o_setting_left">
                                    <field name="postnl_default_package_type"/>
                                    <field name="postnl_default_signature"/>
                                    <field name="postnl_default_only_recipient"/>
                                    <field name="postnl_default_insured"/>
                                    <field name="postnl_default_insured_amount"/>
                                </div>
                                <div class="o_setting_right">
                                    <label for="postnl_default_package_type"/>
                                    <div class="text-muted">Default shipment options.</div>
                                </div>
                            </div>
                            <div class="o_setting_box">
                                <div class="o_setting_left">
                                    <field name="postnl_evening_delivery"/>
                                    <field name="postnl_morning_delivery"/>
                                    <field name="postnl_saturday_delivery"/>
                                    <field name="postnl_cutoff_hour"/>
                                </div>
                                <div class="o_setting_right">
                                    <label for="postnl_evening_delivery"/>
                                    <div class="text-muted">Checkout delivery options & cut-off.</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
