<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_postnl" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.postnl</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="priority" eval="100"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='settings']" position="inside">
                    <div class="app_settings_block" data-string="PostNL" string="PostNL"
                         name="monta_postnl" groups="base.group_system" icon="fa-truck">
                        <h2>PostNL Integration</h2>

                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <field name="postnl_sftp_host"/>
                                    <field name="postnl_sftp_port"/>
                                    <field name="postnl_sftp_user"/>
                                    <field name="postnl_sftp_password" password="True"/>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <field name="postnl_remote_order_path"/>
                                    <field name="postnl_remote_shipment_path"/>
                                    <field name="postnl_remote_stock_path"/>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <field name="postnl_batch_size"/>
                                    <field name="postnl_default_shipping_code"/>
                                    <field name="postnl_tnt_url_template"/>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <field name="postnl_enable_scan_cron"/>
                                    <field name="postnl_enable_export_cron"/>
                                    <field name="postnl_enable_import_cron"/>
                                </div>
                            </div>

                            <div class="col-12">
                                <button name="action_postnl_test_sftp" type="object"
                                        string="Test SFTP Connection"
                                        class="btn btn-primary"/>
                                <button name="action_postnl_scan_now" type="object"
                                        string="Run Scan Now"
                                        class="btn btn-secondary"/>
                                <button name="action_postnl_export_now" type="object"
                                        string="Export Orders"
                                        class="btn btn-secondary"/>
                                <button name="action_postnl_import_now" type="object"
                                        string="Import Shipments"
                                        class="btn btn-secondary"/>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
