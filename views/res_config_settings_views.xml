<odoo>
  <data>
    <record id="view_postnl_res_config_settings" model="ir.ui.view">
      <field name="name">res.config.settings.view.form.postnl</field>
      <field name="model">res.config.settings</field>
      <field name="inherit_id" ref="base.res_config_settings_view_form"/>
      <field name="arch" type="xml">
        <xpath expr="//form" position="inside">
          <app string="Odoo-PostNL-Integration" name="odoo_postnl_integration" data-key="odoo_postnl_integration">
            <block title="PostNL Connection">
              <setting string="SFTP Host / Port">
                <div class="row">
                  <div class="col-8"><field name="postnl_sftp_host" placeholder="sftp.example.com"/></div>
                  <div class="col-4"><field name="postnl_sftp_port"/></div>
                </div>
              </setting>
              <setting string="SFTP Credentials">
                <div class="row">
                  <div class="col-6"><field name="postnl_sftp_user"/></div>
                  <div class="col-6"><field name="postnl_sftp_password" password="True"/></div>
                </div>
              </setting>
              <setting string="Remote Paths">
                <div class="row">
                  <div class="col-12"><field name="postnl_remote_order_path"/></div>
                  <div class="col-12"><field name="postnl_remote_shipment_path"/></div>
                  <div class="col-12"><field name="postnl_remote_stock_path"/></div>
                </div>
              </setting>
            </block>
            <block title="Behavior">
              <setting string="Defaults &amp; Templates">
                <div class="row">
                  <div class="col-6"><field name="postnl_batch_size"/></div>
                  <div class="col-6"><field name="postnl_default_shipping_code"/></div>
                  <div class="col-12"><field name="postnl_tnt_url_template" placeholder="https://tracking.postnl.nl/#!/track/{}"/></div>
                </div>
              </setting>
              <setting string="Schedulers">
                <div class="row">
                  <div class="col-4"><field name="postnl_enable_scan_cron"/></div>
                  <div class="col-4"><field name="postnl_enable_export_cron"/></div>
                  <div class="col-4"><field name="postnl_enable_import_cron"/></div>
                </div>
              </setting>
            </block>
          </app>
        </xpath>
      </field>
    </record>
    <record id="action_postnl_settings" model="ir.actions.act_window">
      <field name="name">Settings</field>
      <field name="res_model">res.config.settings</field>
      <field name="view_mode">form</field>
      <field name="target">current</field>
    </record>
    <menuitem id="menu_postnl_settings" name="Settings"
              parent="menu_postnl_cfg" action="action_postnl_settings"
              sequence="90" groups="group_postnl_manager"/>
  </data>
</odoo>
