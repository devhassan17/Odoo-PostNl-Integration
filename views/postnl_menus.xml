<odoo>
  <data>
    <!-- Root App menu (uses Monta icon). 
         NOTE: dashboard tile appears as soon as this root menu exists and application=True -->
    <menuitem id="menu_postnl_root"
              name="Odoo-PostNL-Integration"
              sequence="15"
              web_icon="monta,static/description/icon.png"/>

    <!-- Sections -->
    <menuitem id="menu_postnl_ops" name="Operations" parent="menu_postnl_root" sequence="10"/>
    <menuitem id="menu_postnl_cfg" name="Configuration" parent="menu_postnl_root" sequence="90"/>

    <!-- Orders -->
    <record id="action_postnl_orders" model="ir.actions.act_window">
      <field name="name">Orders</field>
      <field name="res_model">postnl.order</field>
      <field name="view_mode">list,form</field>
    </record>
    <menuitem id="menu_postnl_orders" name="Orders" parent="menu_postnl_ops"
              action="action_postnl_orders" sequence="10"/>

    <!-- Rules -->
    <record id="action_postnl_rules" model="ir.actions.act_window">
      <field name="name">Shipping Rules</field>
      <field name="res_model">postnl.shipping.rule</field>
      <field name="view_mode">list,form</field>
    </record>
    <menuitem id="menu_postnl_rules" name="Shipping Rules" parent="menu_postnl_cfg"
              action="action_postnl_rules" sequence="10"/>

    <!-- Quick testers -->
    <record id="action_postnl_run_export_products" model="ir.actions.server">
      <field name="name">Export Products (Now)</field>
      <field name="model_id" ref="model_postnl_order"/>
      <field name="state">code</field>
      <field name="code">env['postnl.service']._cron_export_products()</field>
    </record>
    <menuitem id="menu_postnl_run_export_products" name="Export Products (Now)"
              parent="menu_postnl_ops" action="action_postnl_run_export_products" sequence="40"/>

    <record id="action_postnl_run_import_inventory" model="ir.actions.server">
      <field name="name">Import Inventory (Now)</field>
      <field name="model_id" ref="model_postnl_order"/>
      <field name="state">code</field>
      <field name="code">env['postnl.service']._cron_import_inventory()</field>
    </record>
    <menuitem id="menu_postnl_run_import_inventory" name="Import Inventory (Now)"
              parent="menu_postnl_ops" action="action_postnl_run_import_inventory" sequence="50"/>

    <!-- Settings -->
    <record id="action_postnl_settings" model="ir.actions.act_window">
      <field name="name">Settings</field>
      <field name="res_model">res.config.settings</field>
      <field name="view_mode">form</field>
      <field name="target">current</field>
    </record>
    <menuitem id="menu_postnl_settings" name="Settings"
              parent="menu_postnl_cfg" action="action_postnl_settings"
              sequence="90" groups="group_postnl_manager"/>
  </data>
</odoo>
