<odoo>
    <record id="view_order_form_postnl" model="ir.ui.view">
        <field name="name">sale.order.form.postnl</field>
        <field name="model">sale.order</field>
        <!-- Keep inheriting the standard Sale Order form -->
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Odoo 18: don't target a specific page; add our own page under the notebook -->
            <xpath expr="//sheet/notebook" position="inside">
                <page name="postnl" string="PostNL">
                    <group>
                        <field name="postnl_delivery_option"/>
                    </group>
                    <group string="Pickup Point">
                        <field name="postnl_pickup_location_code"/>
                        <field name="postnl_pickup_location_name"/>
                        <field name="postnl_pickup_address"/>
                        <field name="postnl_pickup_postcode"/>
                        <field name="postnl_pickup_city"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
