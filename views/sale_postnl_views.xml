<odoo>
  <data>
    <!-- Add a PostNL tab on the Sales Order -->
    <record id="view_order_form_postnl" model="ir.ui.view">
      <field name="name">sale.order.form.postnl</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form"/>
      <field name="arch" type="xml">
        <xpath expr="//sheet/notebook" position="inside">
          <page string="PostNL">
            <group>
              <group>
                <field name="postnl_delivery_date"/>
                <field name="postnl_timeslot"/>
                <field name="postnl_only_recipient"/>
                <field name="postnl_home_only"/>
              </group>
              <group>
                <field name="postnl_mailbox_parcel"/>
                <field name="postnl_age_check"/>
              </group>
            </group>
          </page>
        </xpath>
      </field>
    </record>

    <!-- Add gift message column to the order line list -->
    <record id="view_order_form_postnl_lines" model="ir.ui.view">
      <field name="name">sale.order.form.postnl.lines</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='order_line']/list" position="inside">
          <field name="postnl_gift_message"/>
        </xpath>
      </field>
    </record>

    <!-- Optional: also show in the order line form popup -->
    <record id="view_order_line_form_postnl" model="ir.ui.view">
      <field name="name">sale.order.line.form.postnl</field>
      <field name="model">sale.order.line</field>
      <field name="inherit_id" ref="sale.view_order_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='order_line']/form/sheet/group" position="inside">
          <field name="postnl_gift_message"/>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
